{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug push_swap",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/push_swap", // Ruta al ejecutable
            "args": ["1", "2", "-1", "4", "5"], // Argumentos para el programa
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build push_swap", // Tarea de compilaci√≥n antes del debug
            "miDebuggerPath": "/usr/bin/gdb" // Ruta al debugger (gdb en este caso)
        }
    ]
}